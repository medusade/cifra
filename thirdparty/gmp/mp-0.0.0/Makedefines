#
# build PKG
#
BUILD_PKG = $(PKG)

#
# build PRJ
#
BUILD_PRJ = os

#
# build HOME
#
ifndef BUILD_HOME
ifdef BUILD_PKG
BUILD_HOME = $(BUILD_PKG)/../..
else
BUILD_HOME = $(HOME)
endif
endif

#
# build TYPE
#
ifndef BUILD_TYPE
BUILD_TYPE = Debug
endif

#
# build UNAME
#
ifndef UNAME
UNAME = $(shell uname)
endif

#
# build OS
#
ifndef OS
ifneq ($(UNAME), Darwin)
OS = linux
else
OS = macosx
endif
endif

#
# project OS
#
ifndef PRJ_OS
ifdef BUILD_PRJ
PRJ_OS = $(BUILD_PRJ)
else
PRJ_OS = $(OS)
endif
endif
